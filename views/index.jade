extends layout

block head

block content
  h1 Notifiction Map
  div.pure-g
    div.pure-u-1-4
        div.notification-list
    div.pure-u-3-4
      div.map-container
        div#map
        div#mapInfo
          small West
          small.west
          small South
          small.south
        div#mapActions
          input#lat(type='text')
          input#lon(type='text')
          button Set as Center
  script#notificationTemplate(type='text/template')
    div.title <%- title %>
    div.more-details.hidden
      div <%- description %>
      div
        span Lon: <%- lon %> &nbsp;
        span Lat: <%- lat %>
      button Close

